@model SV18T1021172.DomainModel.Employee
@{
    ViewBag.Title = "Xóa nhân viên";
}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/employee/delete/@Model.EmployeeID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.FirstName @Model.LastName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@string.Format("{0:dd/MM/yyyy}", Model.BirthDate)</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Notes</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo" />
                    <img src="~/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @*<button type="submit" class="btn btn-danger">
                        <i class="fa fa-remove"></i> Đồng ý xóa
                    </button>
                    <a class="btn btn-warning" href="~/employee">
                        <i class="fa fa-ban"></i> Bỏ qua
                    </a>*@

                    @if (SV18T1021172.BusinessLayer.CommonDataService.InUsedEmployee(Model.EmployeeID))
                    {
                        <p class="text-danger">Không thể xóa nhân viên này</p>
                        <a href="~/employee" class="btn btn-warning">
                            <i class="fa fa-backward"></i>
                            Quay về
                        </a>
                    }
                    else
                    {
                        <a href="~/employee" class="btn btn-warning">
                            <i class="fa fa-backward"></i>
                            Quay về
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-remove"></i>
                            Xóa nhân viên
                        </button>
                    }
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>
