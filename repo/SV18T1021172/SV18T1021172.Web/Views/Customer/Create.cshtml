@model SV18T1021172.DomainModel.Customer
@{

}

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/customer/save" method="post">

            @Html.HiddenFor(m => m.CustomerID)
            @*<input type="hidden" name="CustomerID" value="@Model.CustomerID" />*@

            <div class="form-group">
                <label class="control-label col-sm-2">Tên khách hàng:</label>
                <div class="col-sm-10">
                    @* sinh ra thẻ HTML tương tự thẻ input *@
                    @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @autofocus = "autoforcus" })
                    @* Hiển thị thông báo lỗi tương ứng với tên thông báo lỗi ở Controller *@
                    @*@Html.ValidationMessageFor(m => m.CustomerName, "", new { @class = "text-danger" })*@
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên giao dịch:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control" })
                    @*<input type="text" class="form-control" id="ContactName" name="ContactName" placeholder="" value="@Model.ContactName">*@
                    @*@Html.ValidationMessageFor(m => m.ContactName)*@
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    @*<input type="text" class="form-control" id="Address" name="Address" placeholder="" value="@Model.Address">*@
                    @*@Html.ValidationMessageFor(m => m.Address)*@
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Quốc gia:</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.Country, SelectListHelper.Countries(), new { @class = "form-control select2", @name = "state" })

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Thành phố:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                    @*<input type="text" class="form-control" id="City" name="City" placeholder="" value="@Model.City">*@
                    @*@Html.ValidationMessageFor(m => m.City)*@
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mã bưu chính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })
                    @*<input type="text" class="form-control" id="PostalCode" name="PostalCode" placeholder="" value="@Model.PostalCode">*@
                    @*@Html.ValidationMessageFor(m => m.PostalCode)*@
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 text-danger">
                    @Html.ValidationSummary();
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <a href="~/customer" class="btn btn-warning">
                        <i class="fa fa-backward"></i>
                        Quay về
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i>
                        Thêm khách hàng
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer">

    </div>
</div>


@section jquerySelectCountry{
    <script>
        $(document).ready(function () {
            $('.select2').select2();
            $('.daterangepicker').daterangepicker()
        });
    </script>    
}