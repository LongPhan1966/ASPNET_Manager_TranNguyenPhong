@model SV18T1021172.DomainModel.Category
@{
    ViewBag.Title = "Xóa loại hàng";
}

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/category/delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên loại hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CategoryName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả loại hàng</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Description</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (SV18T1021172.BusinessLayer.CommonDataService.InUsedCategory(Model.CategoryID))
                    {
                        <a href="~/category" class="btn btn-warning">
                            <i class="fa fa-backward"></i>
                            Quay về
                        </a>
                        <p class="text-danger">
                            <i class="fa fa-remove"></i>
                            Không thể xóa loại hàng
                        </p>
                    }
                    else
                    {
                        <a href="~/category" class="btn btn-warning">
                            <i class="fa fa-backward"></i>
                            Quay về
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-remove"></i>
                            Xóa loại hàng
                        </button>
                    }
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer">

    </div>
</div>

