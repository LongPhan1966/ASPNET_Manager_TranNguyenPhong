@model SV18T1021172.DomainModel.Product
@{
    ViewBag.Title = "Xóa mặt hàng";
}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/product/delete/@Model.ProductID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ProductName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Unit</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Price</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo" />
                    <img id="Photo" src="~/@Model.Photo" class="img img-bordered" style="width:150px" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (SV18T1021172.BusinessLayer.ProductDataService.InUsedProduct(Model.ProductID))
                    {
                        <a href="~/product" class="btn btn-warning">
                            <i class="fa fa-backward"></i>
                            Quay về
                        </a>
                        <p class="text-danger">
                            <i class="fa fa-remove"></i>
                            không thể xóa mặt hàng
                        </p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Đồng ý xóa
                        </button>
                        <a class="btn btn-warning" href="~/product">
                            <i class="fa fa-ban"></i> Quay lại
                        </a>
                    }
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>

