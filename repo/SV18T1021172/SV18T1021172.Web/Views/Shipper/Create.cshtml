@model SV18T1021172.DomainModel.Shipper
@{
    
}
<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/shipper/save" method="post">

            @Html.HiddenFor(m => m.ShipperID)

            <div class="form-group">
                <label class="control-label col-sm-2">Tên người giao hàng:</label>
                <div class="col-sm-10" style="width: 700px;">
                    @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control", @autofocus = "autoforcus" })
                    @*<input autofocus type="text" class="form-control" id="ShipperName" name="ShipperName">*@
                    @Html.ValidationMessageFor(m => m.ShipperName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại:</label>
                <div class="col-sm-10" style="width: 700px;">
                    @*<input type="text" class="form-control" id="Phone" name="Phone">*@
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @autofocus = "autoforcus" })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                @*@Html.ValidationSummary()*@
            </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <a href="~/shipper" class="btn btn-warning">
                        <i class="fa fa-backward"></i>
                        Quay về
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i>
                        Thêm người giao hàng
                    </button>
                </div>
            </div>
</form>
    </div>
    <div class="box-footer">

    </div>
</div>

