@model SV18T1021172.DomainModel.Supplier
@{

}

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/supplier/save" method="post">

            @Html.HiddenFor(m => m.SupplierID)
            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhà cung cấp:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control", @autofocus = "autoforcus" })
                    @*<input autofocus type="text" class="form-control" id="CustomerName" name="CustomerName">*@
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên giao dịch:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control" })
                    @*<input type="text" class="form-control" id="ContactName" name="ContactName">*@
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    @*<input type="text" class="form-control" id="Address" name="Address">*@
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Quốc gia:</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.Country, SelectListHelper.Countries(), new { @class = "form-control select2", @name = "state" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Thành phố:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control" })

                    @*<input type="text" class="form-control" id="City" name="City">*@
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mã bưu chính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })

                    @*<input type="text" class="form-control" id="PostalCode" name="PostalCode">*@
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })

                    @*<input type="text" class="form-control" id="Phone" name="Phone">*@
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 text-danger">
                    @Html.ValidationSummary();
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <a href="~/supplier" class="btn btn-warning">
                        <i class="fa fa-backward"></i>
                        Quay về
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i>
                        Thêm nhà cung cấp
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer">

    </div>
</div>

@section jquerySelectCountry{
    <script>
        $(document).ready(function () {
            $('.select2').select2();
            $('.daterangepicker').daterangepicker()
        });
    </script>
}